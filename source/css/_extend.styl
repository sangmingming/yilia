$block-caption
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  color: color-grey
  margin-bottom: 1em
  margin-left: 5px
  line-height: 1em
  text-shadow: 0 1px #fff
  font-weight: bold

$block
  background: #fff
  box-shadow: 1px 2px 3px #ddd
  border: 1px solid color-border
  border-radius: 3px

$base-style
  h1
    //font-size: 2em
    font-size: 4.2rem
    line-height: 110%
    margin: 2.1rem 0 1.68rem 0
  h2
    //font-size: 1.5em
    font-size:  3.56rem
    line-height: 110%
    margin: 1.78rem 0 1.424rem 0
  h3
    //font-size: 1.3em
    font-size: 2.92rem
    line-height: 110%
    margin: 1.46rem 0 1.168rem 0
  h4
    //font-size: 1.2em
    font-size: 2.28rem
    line-height: 110%
    margin: 1.14rem 0 0.912rem 0
  h5
    //font-size: 1em
    font-size: 1.64rem
    line-height: 110%
    margin: 0.82rem 0 0.656rem 0
  h6
    //font-size: 1em
    font-size: 1rem
    line-height: 110%
    margin: 0.5rem 0 0.4rem 0
  hr
    border: 1px dashed color-border
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
    line-height: line-height
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: bold
